<h1>NEW GAME</h1>

<div class="container">
<% @letters.each do |letter| %>
  <p><%= letter %></p>
<% end %>
</div>

<form id="waterform" action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input name="token" type="hidden" value="<%=@letters.join%>">
  <input type="text" name="input" placeholder="Insert Word">
  <input type="submit" name="submit">
</form>



